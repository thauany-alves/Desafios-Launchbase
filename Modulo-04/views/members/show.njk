{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section 
      class="avatar"
      style="background: url({{avatar_url}}) no-repeat center center / cover"
    >
    </section>
    <section class="details">
      <h3>Detalhes</h3>
      <div class="item">
        <div>Membro</div>
        <div>{{name}}</div>
      </div>

      <div class="item">
        <div>Email</div>
        <div>{{email}}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{age}}</div>
      </div>

      <div class="item">
        <div>Sexo</div>
        <div>{{'Masculino' if gender == 'M' else 'Feminino'}}</div>
      </div>

      <div class="item">
        <div>Tipo sangu√≠neo</div>
        <div>{{blood}}</div>
      </div>

      <div class="item">
        <div>Peso</div>
        <div>{{weight}}</div>
      </div>

      <div class="item">
        <div>Altura</div>
        <div>{{height}}</div>
      </div>

      <a href="/members/{{id}}/edit" class="button">Editar</a>
      
    </section>
  </div>
  
{% endblock %}