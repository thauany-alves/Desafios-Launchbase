{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section 
      class="avatar"
      style="background: url({{avatar_url}}) no-repeat center center / cover"
    >
    </section>
    <section class="details">
      <h3>Detalhes</h3>
      <div class="item">
        <div>Instrutor</div>
        <div>{{name}}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{age}}</div>
      </div>

      <div class="item">
        <div>Sexo</div>
        <div>{{'Masculino' if gender == 'M' else 'Feminino'}}</div>
      </div>

      <div class="item">
        <div>Acompanhamento</div>
        <div>
          {% for service in services %}
            <span>{{service}}</span>
          {% endfor %}
        
        </div>
      </div>

      <div class="item">
        <div>Desde</div>
        <div>{{created_at}}</div>
      </div>

      <a href="/instructors/{{id}}/edit" class="button">Editar</a>
      
    </section>
  </div>
  
{% endblock %}