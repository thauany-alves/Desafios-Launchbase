<div class="item">
<div>Avatar URL</div>
  <div>
    <input 
      type="url"
      name="avatar_url"
      placeholder="http://"
      value="{{avatar_url}}"
    >
  </div>
</div>

<div class="item">
  <div>Instrutor</div>
  <div>
    <input 
      type="text"
      name="name"
      placeholder="Nome do Instrutor"
      value="{{name}}"
    >
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input 
      type="date"
      name="birth"
      value="{{birth}}"
    >
  </div>

</div>

<div class="item">
  <div>Sexo</div>
  <div>
    <span>
      <input 
        type="radio" 
        name="gender" 
        value="M" 
        {% if gender == 'M' %}
          checked
        {% endif %}
      >
        Masculino
    </span>
    
    <span>
      <input 
        type="radio" 
        name="gender" 
        value="F"
        {% if gender == 'F' %}
          checked
        {% endif %}
      >
        Feminino
      </span>
  </div>
</div>

<div class="item">
  <div>Area de atuação</div>
  <div>
    <input 
      type="text"
      name="services"
      placeholder="Separe os serviços prestados por vírgula"
      value="{{services}}"
    >
  </div>
</div>

<button type="submit">Salvar</button>
